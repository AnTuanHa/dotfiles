#! /bin/sh

# ------------
# bspwm config
# ------------
bspc monitor -d 1 2 3 4 5 6 7 8 9 0

bspc config top_padding           18
bspc config border_width          2
bspc config window_gap            10
bspc config split_ratio           0.50
bspc config focus_follows_pointer true

# -----
# Rules
# -----
bspc rule -a Steam floating=true desktop=^9
bspc rule -a ncmpcpp desktop=^8
bspc rule -a Mumble floating=true
bspc rule -a Gimp floating=true
bspc rule -a feh floating=true
bspc rule -a mpv floating=true

# ------------------
# Autostart Programs
# ------------------
panel &
redshift -c ~/.config/redshift.conf &
steam &
urxvt -name ncmpcpp -e ncmpcpp &

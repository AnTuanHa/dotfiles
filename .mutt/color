# general-doesn't-fit stuff
color normal     brightwhite default
color error      red default
color markers    blue default
color tilde      default default
color status     brightwhite default

## Email addresses.                                                                                                                                                       
color body brightgreen black "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
 
# index stuff
color indicator  brightwhite brightblack
color tree       blue default
color index      brightwhite default ~A
color index      yellow default ~N
color index      green default ~O
color index      magenta default ~F
color index      brightred default ~D
 
# header stuff
color hdrdefault yellow default
color header     brightyellow default "^Subject"
 
# gpg stuff
color body       green default "^gpg: Good signature.*"
color body       red default "^gpg: BAD signature.*"
color body       brightred default "^gpg: Can't check signature.*"
color body       brightred default "^-----BEGIN PGP SIGNED MESSAGE-----"
color body       brightred default "^-----BEGIN PGP SIGNATURE-----"
color body       brightred default "^-----END PGP SIGNED MESSAGE-----"
color body       brightred default "^-----END PGP SIGNATURE-----"
color body       brightred default "^Version: GnuPG.*"
color body       brightred default "^Comment: .*"
 
# url, email and web stuff
color body       brightgreen default "(finger|ftp|http|https|news|telnet)://[^ >]*"
color body       brightgreen default "<URL:[^ ]*>"
color body       brightgreen default "www\\.[-.a-z0-9]+\\.[a-z][a-z][a-z]?([-_./~a-z0-9]+)?"
color body       brightgreen default "mailto: *[^ ]+\(\\i?subject=[^ ]+\)?"
color body       brightgreen default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
 
# misc body stuff
color attachment red default #Add-ons to the message
color signature  cyan default
 
